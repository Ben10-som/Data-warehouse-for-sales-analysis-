{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "GlueRunAndRead",
      "Effect": "Allow",
      "Action": [
        "glue:StartJobRun",
        "glue:GetJobRun",
        "glue:GetJobRuns",
        "glue:BatchGetJobs",
        "glue:GetDatabase",
        "glue:GetTable"
      ],
      "Resource": "*"
    },
    {
      "Sid": "RedshiftDataExecute",
      "Effect": "Allow",
      "Action": [
        "redshift-data:ExecuteStatement",
        "redshift-data:BatchExecuteStatement",
        "redshift-data:DescribeStatement",
        "redshift-data:GetStatementResult"
      ],
      "Resource": "*"
    },
    {
      "Sid": "S3ReadForAnalysis",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::MONBUCKETNAME",
        "arn:aws:s3:::MONBUCKETNAME/*"
      ]
    }
  ]
}
